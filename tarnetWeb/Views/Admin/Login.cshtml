
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>AlloverMovie-AGiriş</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/Content/AdminLayout/css/style3.css">

</head>
    <body class="img js-fullheight" style="background-image: url(/Content/AdminLayout/img/bg.jpg);">
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="d-flex justify-content-center">
                        <div class"col-md-6" >
                            <img src="/Content/AdminLayout/img/logo-pc.png" style="max-height:400px" alt="Image" class="brand_logo img-fluid">
                            <h2 class="heading-section row justify-content-center">Admin Panel Giriş</h2>
                        </div>

                    </div>
                   
                </div>
                <div class="row justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="login-wrap p-0">
                            <form action="/Admin/Login/" method="post" class="login-form">
                                <div class="form-group">
                                    @if (Session["adminId"]==null)
                                    {
                                        <p class="alert"> @ViewBag.Uyari</p>
                                    }
                                    <input type="text" class="form-control" placeholder="E-Posta" name="Eposta" required>
                                </div>
                                <div class="form-group">
                                    <input id="password-field" type="password" class="form-control" name="Sifre" placeholder="Şifre" required>
                                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="form-control btn btn-primary submit px-3">Giriş Yap</button>
                                </div>
                                <div>
                                    
                                    <div class="form-group d-md-flex">
                                        <div class="w-50">
                                            <label class="checkbox-wrap checkbox-primary">
                                                Beni Hatırla
                                                <input type="checkbox" checked>
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>

                                    </div>
                                </div>
                            </form>
                            <p class="w-100 text-center">&mdash; İletişim &mdash;</p>
                            <div class="social d-flex text-center">
                                <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Facebook</a>
                                <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="ion-logo-twitter mr-2"></span> Twitter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="js/jquery3.min.js"></script>
        <script src="js/popper3.js"></script>
        <script src="js/bootstrap3.min.js"></script>
        <script src="js/main3.js"></script>

    </body>
</html>
