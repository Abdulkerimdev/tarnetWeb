@model IEnumerable<tarnetWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout - .cshtml";
}
<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
    });
</script>
<a class="btn btn-default" href="/Blog/Create">Yeni Blog Ekle</a>
<h2>Blog Kayıtları</h2>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimUrl</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.Baslik</td>
            <td>@item.KategoriId</td>
            <td><img src="@item.ResimUrl" style="max-height: 200px; max-height: 200px; height: auto; width: auto" /></td>
            <td>
                <a href="/Blog/Edit/@item.BlogId">Güncelle</a> |
                <a href="/Blog/Details/@item.BlogId">Detay</a> |
                <a href="/Blog/Delete/@item.BlogId">Sil</a>
            </td>
        </tr>
        }
        
    </tbody>
</table>

