
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout - .cshtml";
}

<h2>Blog Kaydı Ekle</h2>

<div class="form">
    @* <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Blog/Create" enctype="multipart/form-data">*@
    @using (Html.BeginForm("Create", "Blog",FormMethod.Post,new { enctype ="multipart/form-data"}))
    {
        @Html.AntiForgeryToken();
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Baslik" name="Baslik" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Kategori</label>
            <div class="col-lg-10">
                @Html.DropDownList("KategoriId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İçerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="İcerik"> </textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Resim <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" name="ResimUrl" type="file" accept=".jpg,.jpeg.,.png" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-success" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"> <a href="/Blog/Index">İptal</a></button>
            </div>
        </div>
    }

    @*</form>*@
</div>

