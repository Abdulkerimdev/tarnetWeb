@model IEnumerable<tarnetWeb.Models.Model.Icerik>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout - .cshtml";
}

<h2>İçerikler</h2>
<a class="btn btn-default" href="/Icerik/Create">Yeni Ekle</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Çıkış Yıl</th>
            <th>Dil</th>
            <th>Açıklama</th>
            <th>Logo</th>
            <th>İzleme Linki</th>
            <th>Yorum Linki</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {   
            <tr>
                <td>@item.Baslik</td>
                <td>@item.CikisYil</td>
                <td>@item.Dil</td>
                <td>@item.Aciklama</td>
                <td> <img src="@item.Logo" style="max-height: 300px; max-height: 200px; height: auto; width: auto" margin-left: 35%" /></td>
                <td>@item.IzlemeLink</td>
                <td>@item.YorumLink</td>
                <td><a href="/Icerik/Edit/@item.IcerikId">Düzenle</a> | <a href="/Icerik/Delete/@item.IcerikId">Sil</a></td>
            </tr>
        }
    </tbody>
   
</table>

