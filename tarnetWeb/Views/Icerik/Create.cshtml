@model tarnetWeb.Models.Model.Icerik

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout - .cshtml";
}

<h2>İçerik Ekle</h2>

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<div class="form">
    <form class="form-validate form-horizontal" id="create" method="post" action="/Icerik/Create" enctype="multipart/form-data">
        
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input type="text" class="form-control" id="Baslik" name="Baslik" minlength="5"  required />
            </div>
        </div>

        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Çıkış Yılı <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control " id="cemail" type="number" name="CikisYil" required />
            </div>
        </div>

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Gösterim Dili<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="subject" name="Dil" minlength="5" type="text" required />
            </div>
        </div>

        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Açıklama<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="subject" name="Aciklama" minlength="5" type="text" required />
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input type="file" class="form-control" name="LogoByteData" accept=".jpg,.png,.jpeg,.pdf" />
            </div>
        </div>

      
        <div class="form-group ">
            <label for="ccomment" class="control-label col-lg-2">İzleme Link</label>
            <div class="col-lg-10">
                <textarea class="form-control " id="ccomment" name="IzlemeLink" ></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="ccomment" class="control-label col-lg-2">Yorum Link</label>
            <div class="col-lg-10">
                <textarea class="form-control " id="ccomment" name="YorumLink" ></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Icerik/Index">İptal</a></button>
            </div>
        </div>
    </form>
</div>


<div>
    @Html.ActionLink("Back to List", "Index")
</div>
